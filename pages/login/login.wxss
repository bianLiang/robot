/* miniprogram/pages/login/login.wxss */
.logo {
  width: 193rpx;
  height: 197rpx;
  margin: 130rpx auto;
}
.login-btn {
  width: 654rpx;
  height: 84rpx;
  line-height: 84rpx;
  border: 1rpx solid #43B478;
  color: #43B478;
  background: #fff;
  border-radius: 42rpx;
}
.activeClass {
  background: #43B478;
  color: #fff;
}
.min-logo {
  width: 56rpx;
  height: 56rpx;
}
.title {
  display: flex;
}
.company {
  color: #333;
  font-size: 34rpx;
  font-weight: 600;
  margin: 0 20rpx;
}
.title-tips {
  font-size: 34rpx;
  font-weight: 400;
}
.phone-title {
  font-size: 50rpx;
  font-weight: 600;
}
.other {
  color: #576B95;
  font-size: 30rpx;
}
.weChart-phone {
  border-top: 1rpx solid #E2E2E2;
  border-bottom: 1rpx solid #E2E2E2;
  display: flex;
  padding: 25rpx 0;
  margin: 30rpx 0;
}
.footer {
  display: flex;
}
.footer button {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 31rpx;
  font-size: 32rpx;
}
.footer button:first-child {
  color: #4DB862;
  border: #4DB862;
}
.footer button:last-child {
  background: #4DB862;
  border: #4DB862;
  color: #fff;
}
